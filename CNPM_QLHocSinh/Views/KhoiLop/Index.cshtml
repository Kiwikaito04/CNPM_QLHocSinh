@model IEnumerable<CNPM_QLHocSinh.Models.KhoiLop>

@{
    ViewBag.Title = "Khối Lớp";
}

<h2>Danh sách khối lớp</h2>

@Html.Partial("_ViewBagError")

<p>
    @Html.Partial("_CreateButton")
</p>
<table class="table">
    <tr>
        <th>
            Mã khối lớp
        </th>
        <th>
            Tên khối lớp
        </th>
        <th>
            Cấp bậc
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaKL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenKL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CapBac)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaKL }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.MaKL }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.MaKL }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
