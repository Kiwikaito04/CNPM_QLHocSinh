@model CNPM_QLHocSinh.Models.KhoiLop

@{
    ViewBag.Title = "XoaKhoiLop";
}

<h2>Xóa Khối Lớp</h2>

@if (ViewBag.Error != null)
{
    <div>@ViewBag.Error</div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Khối Lớp</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MaKL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaKL)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TenKL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenKL)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MoTa)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CapBac)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CapBac)
        </dd>

        <dt>
            Danh sách lớp của khối
        </dt>


        @foreach (var i in Model.LopHoc)
        {
            <dd>
                @Html.DisplayFor(item => i.TenLop)

            </dd>
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Quay lại", "XemKhoiLop", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
