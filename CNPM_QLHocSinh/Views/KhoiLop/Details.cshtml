@model CNPM_QLHocSinh.Models.KhoiLop

@{
    ViewBag.Title = "Khối Lớp";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">@Html.DisplayFor(model => model.TenKL)</h2>
                    <hr />
                    @{bool check = Model.LopHoc.Count > 0; }

                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MaKL)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaKL)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TenKL)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TenKL)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CapBac)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CapBac)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MoTa)</dt>
                        @if (Model.MoTa != null)
                        {<dd class="col-sm-8">@Html.DisplayFor(model => model.MoTa)</dd>}
                        else
                        {<dd class="col-sm-8">N/A</dd>}

                        @if (check)
                        {
                            <dt class="col-sm-4">
                                Danh sách lớp của khối
                            </dt>
                            <dd class="col-sm-8">
                                <ul>
                                    @foreach (var i in Model.LopHoc)
                                    {
                                        <li>@Html.DisplayFor(item => i.TenLop)</li>
                                    }
                                </ul>
                            </dd>
                        }

                    </dl>

                    <div class="text-center mt-4">
                        @Html.Partial("_EditBtn", Model.MaKL)
                        @Html.Partial("_DeleteBtn", Model.MaKL)
                        @Html.Partial("_BackBtn")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
