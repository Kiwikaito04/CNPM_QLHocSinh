@model CNPM_QLHocSinh.Models.KhoiLop

@{
    ViewBag.Title = "Khối lớp";
}

<h2>Xóa Khối Lớp</h2>

@Html.Partial("_ViewBagError")

@{bool check = Model.LopHoc.Count > 0; }
@if (!check)
{
    <h3>Bạn có chắc muốn xoá khối lớp này không?</h3>
}
else
{
    <h3>Không thể xoá vì có tồn tại lớp học của khối này.</h3>
}
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MaKL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaKL)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TenKL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenKL)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MoTa)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CapBac)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CapBac)
        </dd>
        @if (check)
        {
            <dt>
                Danh sách lớp của khối
            </dt>
            foreach (var i in Model.LopHoc)
            {
                <dd>
                    @Html.DisplayFor(item => i.TenLop)
                </dd>
            }
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (!check)
            {<input type="submit" value="Xoá" class="btn btn-danger" /> <a>|</a>}
            @Html.Partial("_BackButton")
        </div>
    }
</div>
