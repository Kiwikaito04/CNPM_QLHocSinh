@model CNPM_QLHocSinh.Models.ViewModels.HSView

@{
    ViewBag.Title = "Học Sinh";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Thêm Học Sinh</h2>
                    <hr />

                    @Html.Partial("_ViewBagError")

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.Partial("PartialViews/_HocSinhForm", Model)
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/MyJS.js"></script>
