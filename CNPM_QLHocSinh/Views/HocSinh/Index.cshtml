@model IEnumerable<CNPM_QLHocSinh.Models.HocSinh>

@{
    ViewBag.Title = "Học Sinh";
}

<h2>Tìm Học Sinh</h2>
<hr />

@Html.Partial("_ViewBagError")

<form method="get" action="@Url.Action("Index")">
    <div class="search">
        <div id="search_text">
            <input type="text" name="searchHS" class="form-control" placeholder="Nhập tên học sinh" value="@ViewBag.SearchHS" />
        </div>
        <div id="button_search">
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
        <div id="partial_button">
            @Html.Partial("_CreateBtn")
        </div>
    </div>

</form>

<p>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaHS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaTT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaLop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pass)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>*@
            <td>
                @if (item.GioiTinh)
                {
                    <text>Nam</text>
                }
                else
                {
                    <text>Nữ</text>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaTT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pass)
            </td>
            @Html.Partial("_ActionButtons", item.MaHS)
        </tr>
    }

</table>
