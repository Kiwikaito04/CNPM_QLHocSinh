@model CNPM_QLHocSinh.Models.ViewModels.GVView

<div class="row mb-3">
    @Html.LabelFor(model => model.GiaoVien.MaGV, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-end" })
    <div class="col-md-8">
        @Html.EditorFor(model => model.GiaoVien.MaGV, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @readonly = "readonly" } })

        @Html.ValidationMessageFor(model => model.GiaoVien.MaGV, "", new { @class = "text-danger" })
    </div>
</div>

<div class="row mb-3">
    @Html.LabelFor(model => model.GiaoVien.HoTen, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-end" })
    <div class="col-md-8">
        @Html.EditorFor(model => model.GiaoVien.HoTen, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.GiaoVien.HoTen, "", new { @class = "text-danger" })
    </div>
</div>

<div class="row mb-3">
    @Html.LabelFor(model => model.GiaoVien.GioiTinh, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-end" })
    <div class="col-md-8">
        <input type="checkbox" id="GioiTinhCheckbox" name="GioiTinh" value="true" @(Model.GiaoVien.GioiTinh ? "checked" : "")>
        <label for="GioiTinhCheckbox" id="GioiTinhLabel"></label>
        <input type="hidden" name="GioiTinh" value="false">
        @Html.ValidationMessageFor(model => model.GiaoVien.GioiTinh, "", new { @class = "text-danger" })
    </div>
</div>

<div class="row mb-3">
    @Html.LabelFor(model => model.GiaoVien.NgaySinh, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-end" })
    <div class="col-md-8">
        @Html.TextBoxFor(model => model.GiaoVien.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(model => model.GiaoVien.NgaySinh, "", new { @class = "text-danger" })
    </div>
</div>

