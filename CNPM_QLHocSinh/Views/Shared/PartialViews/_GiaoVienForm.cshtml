@if (Model.ChucVuList != null)
{
    <div class="row mb-3">
        @Html.LabelFor(model => model.GiaoVien.MaCV, "Chức vụ", htmlAttributes: new { @class = "col-md-4 col-form-label text-md-end" })
        <div class="col-md-8">
            @Html.DropDownListFor(model => model.GiaoVien.MaCV, new SelectList(Model.ChucVuList, "MaCV", "TenCV"), "--Chọn--", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.GiaoVien.MaCV, "", new { @class = "text-danger" })
        </div>
    </div>
}
else
{
    <div class="row mb-3">
        @Html.LabelFor(model => model.GiaoVien.ChucVu.TenCV, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-end" })
        <div class="col-md-8">
            @Html.DisplayFor(model => model.GiaoVien.ChucVu.TenCV, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GiaoVien.ChucVu.TenCV, "", new { @class = "text-danger" })
        </div>
    </div>
            @Html.HiddenFor(model => model.GiaoVien.MaCV, new { @class = "form-control" })
}
