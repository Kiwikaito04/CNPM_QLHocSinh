        @Html.ValidationMessageFor(model => model.GiaoVien.Pass, "", new { @class = "text-danger" })
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12 text-center">
        <button type="submit" class="btn btn-success">Lưu</button> |
        @Html.Partial("_BackBtn")
    </div>
</div>

