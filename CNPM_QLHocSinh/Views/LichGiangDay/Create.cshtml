@model CNPM_QLHocSinh.Models.LichGiangDay

@{
    ViewBag.Title = "Lịch giảng dạy";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Thêm Lịch giảng dạy</h2>
                    <hr />

                    @Html.Partial("_ViewBagError")

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row mb-3">
                            @Html.LabelFor(model => model.MaLop, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-end" })
                            <div class="col-md-8">
                                @Html.DropDownList("MaLop", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaLop, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            @Html.LabelFor(model => model.MaMH, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-end" })
                            <div class="col-md-8">
                                @Html.DropDownList("MaMH", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaMH, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            @Html.LabelFor(model => model.MaGV, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-end" })
                            <div class="col-md-8">
                                @Html.DropDownList("MaGV", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaGV, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            @Html.LabelFor(model => model.MaCa, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-end" })
                            <div class="col-md-8">
                                @Html.DropDownList("MaCa", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaCa, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-success">Lưu</button> |
                                @Html.Partial("_BackBtn")
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
