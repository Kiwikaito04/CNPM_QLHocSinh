@model IEnumerable<CNPM_QLHocSinh.Models.TrangThaiHS>

@{
    ViewBag.Title = "Index";
}
<h2>Danh sách trạng thái</h2>
<hr />

@Html.Partial("_ViewBagError")

<table class="table table-hover">
    <tr>
        <th>@Html.DisplayNameFor(model => model.MaTT)</th>
        <th>@Html.DisplayNameFor(model => model.TenTT)</th>
        <th>@Html.DisplayNameFor(model => model.MoTa)</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaTT)</td>
            <td>@Html.DisplayFor(modelItem => item.TenTT)</td>
            @if (item.MoTa != null)
            {
                <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
}
            else
            {
                <td>N/A</td>
}
        </tr>
    }

</table>
