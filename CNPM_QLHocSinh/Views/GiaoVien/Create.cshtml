@model CNPM_QLHocSinh.Models.ViewModels.GVView

@{
    ViewBag.Title = "Giáo Viên";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Thêm Giáo viên</h2>
                    <hr />

                    @Html.Partial("_ViewBagError")

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.Partial("PartialViews/_GiaoVienForm", Model)
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/MyJS.js"></script>