@model CNPM_QLHocSinh.Models.ViewModels.LHView

@{
    ViewBag.Title = "Lớp Học";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Thêm Lớp học</h2>
                    <hr />

                    @Html.Partial("_ViewBagError")

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row mb-3">
                            @Html.Label("Chọn số", htmlAttributes: new { @class = "col-form-label text-md-end col-md-4" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.SelectedNumber, new SelectList(Model.AvailableNumbers), "-- Chọn số --", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SelectedNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            @Html.Label("Chọn khối lớp", htmlAttributes: new { @class = "col-form-label text-md-end col-md-4" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.SelectedMaKL, new SelectList(Model.DSKhoiLop, "MaKL", "TenKL"), "-- Chọn khối lớp --", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SelectedMaKL, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-success">Lưu</button> |
                                @Html.Partial("_BackBtn")
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
